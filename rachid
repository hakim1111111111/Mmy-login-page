  <script>
    function login() {
      const username = document.getElementById('username').value.trim().toLowerCase();
      const message = document.getElementById('message');

      if (username === "rachid") {
        message.innerHTML = "✅ Welcome Meryem, this person love's you ❤️";
      } else {
        message.innerHTML = "❌ Invalid username. Access denied.";
      }
    }
